<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         styleClass="blue-bg">
    <VBox styleClass="drop-zone" fx:id="dropZone" alignment="CENTER" spacing="16">
        <padding>
            <Insets top="48" bottom="48" left="32" right="32"/>
        </padding>
        <VBox.margin>
            <Insets top="152" left="32" right="32"/>
        </VBox.margin>

        <Label text="Drop image file" styleClass="h5, text-indigo_9"/>
        <Label text="Image must be in PNG format and should have a resolution power of two" textAlignment="CENTER"
               lineSpacing="4"
               styleClass="text-indigo_9"
               wrapText="true"/>
    </VBox>
</fx:root>
