<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="920.0"
      prefWidth="480.0" stylesheets="@light.css"
      fx:controller="de.simbuildings.tilemapper.controllers.PrimaryController" xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" styleClass="import-section" spacing="16">
      <Button mnemonicParsing="false" text="Import image file" fx:id="importButton" onAction="#handleImportButtonAction"/>
      <Label text="No file selected" fx:id="importLabel"/>
   </VBox>
   <VBox styleClass="content-section">
      <Label text="Settings" styleClass="h6"/>
      <VBox spacing="16">
         <ComboBox promptText="Choose target resolution" disable="true" fx:id="resolutionComboBox" prefWidth="Infinity" />
         <TextField promptText="Enter block" disable="true" fx:id="blockTextField"/>
      </VBox>
   </VBox>
   <VBox styleClass="content-section">
      <Label text="Export" styleClass="h6"/>
      <Button mnemonicParsing="false" text="Tile image" fx:id="exportButton" onAction="#handleExportButtonAction"/>
   </VBox>
</VBox>
