<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            fx:controller="de.simbuildings.tilemapper.ui.controllers.PrimaryController"
            prefWidth="400.0" stylesheets="@light.css"
            xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1" fx:id="root">
    <top>
        <VBox>
            <VBox styleClass="blue-bg" alignment="CENTER" spacing="16">
                <padding>
                    <Insets top="32" bottom="32"/>
                </padding>
                <Button fx:id="importButton" text="Import image"/>
                <Label fx:id="fileLabel" text="Select valid image"/>
            </VBox>

            <VBox styleClass="content-wrapper" spacing="32">
                <VBox spacing="24">
                    <Label styleClass="h6" text="Settings"/>
                    <VBox spacing="8">
                        <Label text="Resolution" styleClass="body-medium"/>
                        <ComboBox fx:id="resolutionComboBox" promptText="Choose texture resolution"
                                  prefWidth="Infinity"/>
                    </VBox>
                    <VBox spacing="8">
                        <Label text="Block name" styleClass="body-medium"/>
                        <TextField fx:id="blockTextField" promptText="minecraft:stone"/>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </top>

    <bottom>
        <VBox styleClass="content-wrapper" spacing="8">
            <Button mnemonicParsing="false" text="Tile image" fx:id="exportButton"/>
        </VBox>
    </bottom>
</BorderPane>
